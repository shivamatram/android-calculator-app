<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/input_background_light" />
            <stroke 
                android:width="2dp" 
                android:color="@color/input_stroke_focused_light" />
        </shape>
    </item>
    
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/input_background_light" />
            <stroke 
                android:width="1dp" 
                android:color="@color/input_stroke_light" />
        </shape>
    </item>
    
</selector>
