<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="12dp">

    <!-- Display Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"
        android:gravity="bottom">

        <EditText
            android:id="@+id/expression_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="Enter expression"
            android:gravity="end"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false"
            android:maxLines="2"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/result_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:text="0"
            android:gravity="end"
            android:textColor="#2196F3"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="start" />

    </LinearLayout>

    <!-- Button Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <Button android:id="@+id/btn_clear" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="C" 
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_delete" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="⌫" 
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_percentage" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="%" 
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_divide" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="÷" 
                android:textSize="20sp"
                android:background="@drawable/operator_button_background"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <Button android:id="@+id/btn_7" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="7" 
                android:textSize="20sp"
                android:background="@drawable/number_button_background"
                android:textColor="#333333"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_8" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="8" 
                android:textSize="20sp"
                android:background="@drawable/number_button_background"
                android:textColor="#333333"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_9" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="9" 
                android:textSize="20sp"
                android:background="@drawable/number_button_background"
                android:textColor="#333333"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_multiply" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="×" 
                android:textSize="20sp"
                android:background="@drawable/operator_button_background"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <Button android:id="@+id/btn_4" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="4" 
                android:textSize="20sp"
                android:background="@drawable/number_button_background"
                android:textColor="#333333"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_5" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="5" 
                android:textSize="20sp"
                android:background="@drawable/number_button_background"
                android:textColor="#333333"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_6" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="6" 
                android:textSize="20sp"
                android:background="@drawable/number_button_background"
                android:textColor="#333333"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_subtract" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="−" 
                android:textSize="20sp"
                android:background="@drawable/operator_button_background"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <Button android:id="@+id/btn_1" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="1" 
                android:textSize="20sp"
                android:background="@drawable/number_button_background"
                android:textColor="#333333"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_2" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="2" 
                android:textSize="20sp"
                android:background="@drawable/number_button_background"
                android:textColor="#333333"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_3" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="3" 
                android:textSize="20sp"
                android:background="@drawable/number_button_background"
                android:textColor="#333333"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_add" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="+" 
                android:textSize="20sp"
                android:background="@drawable/operator_button_background"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <Button android:id="@+id/btn_sqrt" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="√" 
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_power" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="x²" 
                android:textSize="16sp"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_decimal" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="." 
                android:textSize="24sp"
                android:background="@drawable/number_button_background"
                android:textColor="#333333"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_parentheses" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="1" 
                android:layout_margin="6dp" 
                android:text="( )" 
                android:textSize="16sp"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Row 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <Button android:id="@+id/btn_0" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="2" 
                android:layout_margin="6dp" 
                android:text="0" 
                android:textSize="20sp"
                android:background="@drawable/number_button_background"
                android:textColor="#333333"
                android:elevation="4dp" />
            <Button android:id="@+id/btn_equals" 
                android:layout_width="0dp" 
                android:layout_height="match_parent" 
                android:layout_weight="2" 
                android:layout_margin="6dp" 
                android:text="=" 
                android:textSize="24sp"
                android:background="@drawable/equals_button_background"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
